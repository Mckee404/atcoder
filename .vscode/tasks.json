{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "GCC Build",
      "command": "g++",
      "args": [
        "${file}",
        "-std=gnu++20",
        "-O2",
        "-Wall",
        "-Wextra",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Run",
      "command": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [
        "<",
        "${workspaceFolder}/cpp/in.txt",
        ">",
        "${workspaceFolder}/cpp/out.txt"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "GCC Build"
    }
  ]
}